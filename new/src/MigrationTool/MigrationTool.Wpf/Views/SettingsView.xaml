<UserControl x:Class="MigrationTool.Wpf.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:loc="clr-namespace:MigrationTool.Wpf.Markup"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="{loc:Localize SettingsTitle}" 
                       FontSize="28" FontWeight="Bold" Foreground="#1F2937"/>
            <TextBlock Text="{loc:Localize SettingsDescription}" 
                       FontSize="14" Foreground="#6B7280" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Settings Cards -->
        <StackPanel Grid.Row="1">
            <!-- Solution Path -->
            <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{loc:Localize SettingsWorkspace}" 
                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Text="{Binding SolutionPath, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8" Margin="0,0,8,0"/>
                        <Button Grid.Column="1" Content="{loc:Localize Browse}" 
                                Command="{Binding BrowseSolutionCommand}" 
                                Padding="12,8" Margin="0,0,8,0"/>
                        <Button Grid.Column="2" Content="{loc:Localize Loading}" 
                                Command="{Binding LoadSolutionCommand}" 
                                Padding="12,8" Background="#2563EB" Foreground="White"/>
                    </Grid>
                </Grid>
            </Border>

            <!-- Language -->
            <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{loc:Localize SettingsLanguage}" 
                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

                    <ComboBox Grid.Row="1" 
                              ItemsSource="{Binding Languages}" 
                              SelectedItem="{Binding SelectedLanguageOption}"
                              DisplayMemberPath="DisplayName"
                              Width="200" HorizontalAlignment="Left"
                              Padding="8"/>
                </Grid>
            </Border>

            <!-- Status -->
            <Border Background="#F0FDF4" CornerRadius="8" Padding="16" 
                    Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibility}}">
                <TextBlock Text="{Binding StatusMessage}" Foreground="#166534"/>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
