<Window x:Class="MigrationTool.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:MigrationTool.Wpf.Views"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="#1E293B">
            <DockPanel>
                <!-- Header -->
                <Border DockPanel.Dock="Top" Padding="16" Background="#0F172A">
                    <StackPanel>
                        <TextBlock Text="ðŸ”„ Migration Tool" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="v1.0.0" 
                                   Foreground="#64748B" 
                                   FontSize="11" 
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Buttons -->
                <StackPanel Margin="8,16,8,8">
                    <Button Content="ðŸ“Š Dashboard" 
                            Command="{Binding NavigateToDashboardCommand}"
                            Style="{StaticResource NavButtonStyle}"
                            Tag="{Binding CurrentPage}"/>
                    
                    <Button Content="ðŸ“ Explorer" 
                            Command="{Binding NavigateToExplorerCommand}"
                            Style="{StaticResource NavButtonStyle}"
                            Margin="0,4,0,0"/>
                    
                    <Button Content="ðŸ“‹ Planner" 
                            Command="{Binding NavigateToPlannerCommand}"
                            Style="{StaticResource NavButtonStyle}"
                            Margin="0,4,0,0"/>
                    
                    <Button Content="âš™ï¸ Settings" 
                            Command="{Binding NavigateToSettingsCommand}"
                            Style="{StaticResource NavButtonStyle}"
                            Margin="0,4,0,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Padding="24">
            <ContentControl x:Name="ContentArea"/>
        </Border>
    </Grid>
</Window>
