<UserControl x:Class="MigrationTool.Wpf.Views.PlannerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:loc="clr-namespace:MigrationTool.Wpf.Markup"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="{loc:Localize PlannerTitle}" 
                       FontSize="28" FontWeight="Bold" Foreground="#1F2937"/>
            <TextBlock Text="{loc:Localize MigrationPlannerDescription}" 
                       FontSize="14" Foreground="#6B7280" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <Button Content="{loc:Localize PlannerNewPlan}" Command="{Binding NewPlanCommand}" 
                    Padding="12,8" Margin="0,0,8,0"/>
            <Button Content="{loc:Localize PlannerLoadPlan}" Command="{Binding LoadPlanCommand}" 
                    Padding="12,8" Margin="0,0,8,0"/>
            <Button Content="{loc:Localize PlannerSavePlan}" Command="{Binding SavePlanCommand}" 
                    Padding="12,8" Margin="0,0,8,0"/>
            <Button Content="{loc:Localize PlannerAddStep}" Command="{Binding AddStepCommand}" 
                    Padding="12,8" Margin="0,0,8,0" Background="#2563EB" Foreground="White"/>
            <Button Content="{loc:Localize PlannerExecute}" Command="{Binding ExecutePlanCommand}" 
                    Padding="12,8" Background="#059669" Foreground="White"/>
        </StackPanel>

        <!-- Steps List -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="{loc:Localize PlanDetails}" 
                           FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

                <DataGrid Grid.Row="1" ItemsSource="{Binding Steps}" 
                          SelectedItem="{Binding SelectedStep}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="120"/>
                        <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="*"/>
                        <DataGridTextColumn Header="Target" Binding="{Binding Target}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F3F4F6" Padding="12" Margin="0,16,0,0" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center" Foreground="#6B7280"/>
                
                <ProgressBar Grid.Column="1" Width="200" Height="8"
                             Value="{Binding ExecutionProgress}" Maximum="100"
                             Visibility="{Binding IsExecuting, Converter={StaticResource BoolToVisibility}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
