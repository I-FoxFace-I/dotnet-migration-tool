@code {
    private string _workspacePath = string.Empty;
    private string _selectedSolution = string.Empty;
    private string _selectedLanguage = "en";
    private List<string> _solutions = [];
    private string _errorMessage = string.Empty;
    private string _successMessage = string.Empty;
    private bool _isLoading = false;
    private List<string> _recentPaths = [];

#if DEBUG
    private const string DEFAULT_DEBUG_PATH = @"C:\Users\mrmar\source\repos\Sandbox\Autofac\Framework.sln";
#endif

    protected override async Task OnInitializedAsync()
    {
        AppState.OnChange += StateHasChanged;
        
        // Use debug default path if available and nothing is loaded
        #if DEBUG
        if (string.IsNullOrEmpty(AppState.WorkspacePath) && File.Exists(DEFAULT_DEBUG_PATH))
        {
            _workspacePath = DEFAULT_DEBUG_PATH;
            await LoadFromPath();
        }
        else
        #endif
        {
            _workspacePath = AppState.WorkspacePath;
        }
        
        _selectedLanguage = Localization.CurrentLanguage;
        
        // Load recent paths from AppState
        _recentPaths = AppState.RecentPaths.ToList();

        if (!string.IsNullOrEmpty(_workspacePath) && Directory.Exists(_workspacePath))
        {
            await LoadSolutionsAsync();
        }
    }

    private void HandleDragOver(DragEventArgs e)
    {
        // Prevent default to allow drop
    }

    private void HandleDragEnter(DragEventArgs e)
    {
        // Visual feedback could be added here via JS interop
    }

    private void HandleDragLeave(DragEventArgs e)
    {
        // Visual feedback could be removed here via JS interop
    }

    private async Task HandleDrop(DragEventArgs e)
    {
        try
        {
            _errorMessage = string.Empty;
            _successMessage = string.Empty;
            
            // Note: Blazor Server drag & drop has limitations
            // We need to use JS interop to get the file/folder path
            // For now, show a helpful message
            _errorMessage = "‚ÑπÔ∏è Drag & drop from Windows Explorer detected! Please paste the full path in the text field below.";
            await Task.CompletedTask;
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
    }

    private async Task ShowQuickLoad()
    {
        try
        {
            _errorMessage = string.Empty;
            
            // Use JS prompt as a reliable cross-browser solution
            var path = await JS.InvokeAsync<string>("promptForPath", 
                "Enter the full path to a folder or .sln file:", 
                _workspacePath);
            
            if (!string.IsNullOrEmpty(path))
            {
                _workspacePath = path.Trim();
                await LoadFromPath();
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
    }

    private async Task LoadRecentPath(string path)
    {
        _workspacePath = path;
        await LoadFromPath();
    }

    private void AddToRecentPaths(string path)
    {
        _recentPaths.Remove(path);
        _recentPaths.Insert(0, path);
        if (_recentPaths.Count > 10)
        {
            _recentPaths = _recentPaths.Take(10).ToList();
        }
        AppState.RecentPaths = _recentPaths;
    }

    private string GetShortPath(string path)
    {
        if (path.Length <= 40) return path;
        
        var fileName = Path.GetFileName(path);
        var dir = Path.GetDirectoryName(path) ?? "";
        
        if (dir.Length > 30)
        {
            var parts = dir.Split(Path.DirectorySeparatorChar);
            if (parts.Length > 2)
            {
                return $"{parts[0]}\\...\\{parts[^1]}\\{fileName}";
            }
        }
        
        return $"...{path[^40..]}";
    }

    private async Task LoadFromPath()
    {
        _errorMessage = string.Empty;
        _successMessage = string.Empty;
        
        if (string.IsNullOrWhiteSpace(_workspacePath))
        {
            _errorMessage = "Please enter a path";
            return;
        }

        // Check if it's a .sln file directly
        if (_workspacePath.EndsWith(".sln", StringComparison.OrdinalIgnoreCase))
        {
            if (File.Exists(_workspacePath))
            {
                await LoadSolutionAsync(_workspacePath);
            }
            else
            {
                _errorMessage = $"Solution file not found: {_workspacePath}";
            }
        }
        // Otherwise treat as directory
        else if (Directory.Exists(_workspacePath))
        {
            AppState.WorkspacePath = _workspacePath;
            await LoadSolutionsAsync();
            
            if (_solutions.Count == 0)
            {
                _errorMessage = "No .sln files found in this directory";
            }
            else if (_solutions.Count == 1)
            {
                // Auto-load if only one solution
                await LoadSolutionAsync(_solutions[0]);
            }
            else
            {
                _successMessage = $"Found {_solutions.Count} solutions. Please select one.";
            }
        }
        else
        {
            _errorMessage = $"Path not found: {_workspacePath}";
        }
    }

    private async Task LoadSelectedSolution()
    {
        if (!string.IsNullOrEmpty(_selectedSolution))
        {
            await LoadSolutionAsync(_selectedSolution);
        }
    }

    private async Task LoadSolutionsAsync()
    {
        if (string.IsNullOrEmpty(_workspacePath))
            return;

        try
        {
            _isLoading = true;
            StateHasChanged();
            
            _solutions = (await SolutionAnalyzer.FindSolutionsAsync(_workspacePath)).ToList();
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task LoadSolutionAsync(string solutionPath)
    {
        try
        {
            _isLoading = true;
            _errorMessage = string.Empty;
            StateHasChanged();
            
            var solution = await SolutionAnalyzer.AnalyzeSolutionAsync(solutionPath);
            AppState.CurrentSolution = solution;
            AppState.WorkspacePath = Path.GetDirectoryName(solutionPath) ?? string.Empty;
            _workspacePath = AppState.WorkspacePath;
            _successMessage = $"Successfully loaded {solution.Name} with {solution.ProjectCount} projects!";
            
            // Add to recent paths
            AddToRecentPaths(solutionPath);
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load solution: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void OnLanguageChanged()
    {
        Localization.CurrentLanguage = _selectedLanguage;
    }

    private void ClearSolution()
    {
        AppState.CurrentSolution = null;
        _solutions.Clear();
        _selectedSolution = string.Empty;
        _successMessage = "Solution cleared";
    }

    public void Dispose()
    {
        AppState.OnChange -= StateHasChanged;
    }
}
