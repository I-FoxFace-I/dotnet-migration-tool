@page "/settings"
@inject AppState AppState
@inject ISolutionAnalyzer SolutionAnalyzer
@inject ILocalizationService Localization
@inject IJSRuntime JS
@implements IDisposable

<PageTitle>@Localization.Get(Strings.SettingsTitle)</PageTitle>

<div class="settings-container">
    <h1>@Localization.Get(Strings.SettingsTitle)</h1>
    <p class="description">@Localization.Get(Strings.SettingsDescription)</p>

    <div class="settings-form">
        <!-- Quick Actions Section -->
        <div class="form-section">
            <h3>üìÇ Quick Load</h3>
            
            <div class="drag-drop-zone" 
                 @ondrop="HandleDrop" 
                 @ondragover="HandleDragOver" 
                 @ondragenter="HandleDragEnter"
                 @ondragleave="HandleDragLeave">
                <div class="drop-icon">üìÅ</div>
                <h4>Drag & Drop</h4>
                <p>Drag a <strong>.sln file</strong> or <strong>folder</strong> here</p>
                <div class="or-divider">‚Äî OR ‚Äî</div>
                <div class="quick-actions">
                    <button class="btn btn-primary" @onclick="ShowQuickLoad" disabled="@_isLoading">
                        üìÇ Quick Browse
                    </button>
                </div>
            </div>
            
            <div class="fallback-note">
                <small>üí° <strong>Tip:</strong> Drag a folder or .sln file from Windows Explorer, or paste the full path in the field below.</small>
            </div>
            
            @if (_recentPaths.Any())
            {
                <div class="recent-paths">
                    <label>Recent:</label>
                    <div class="recent-list">
                        @foreach (var path in _recentPaths.Take(5))
                        {
                            <button class="recent-item" @onclick="() => LoadRecentPath(path)" title="@path" disabled="@_isLoading">
                                @(path.EndsWith(".sln") ? "üìÑ" : "üìÅ") @GetShortPath(path)
                            </button>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="form-divider">
            <span>OR</span>
        </div>

        <!-- Manual Path Entry -->
        <div class="form-section">
            <h3>üìù Enter Path Manually</h3>
            
            <div class="form-group">
                <label>@Localization.Get(Strings.WorkspacePath)</label>
                <div class="input-group">
                    <input type="text" @bind="_workspacePath" @bind:event="oninput" class="form-control" 
                           placeholder="C:\path\to\workspace or C:\path\to\solution.sln" />
                    <button class="btn btn-primary" @onclick="LoadFromPath" disabled="@_isLoading">
                        @if (_isLoading)
                        {
                            <span>Loading...</span>
                        }
                        else
                        {
                            <span>Load</span>
                        }
                    </button>
                </div>
                <small class="form-text">Enter a folder path to scan for solutions, or a direct path to a .sln file</small>
            </div>

            @if (_solutions.Any())
            {
                <div class="form-group">
                    <label>@Localization.Get(Strings.SelectSolution)</label>
                    <select @bind="_selectedSolution" class="form-control">
                        <option value="">-- @Localization.Get(Strings.Select) --</option>
                        @foreach (var solution in _solutions)
                        {
                            <option value="@solution">@System.IO.Path.GetFileName(solution)</option>
                        }
                    </select>
                    <small class="form-text">@Localization.Get(Strings.SolutionsFound) @_solutions.Count</small>
                    
                    @if (!string.IsNullOrEmpty(_selectedSolution))
                    {
                        <button class="btn btn-success mt-2" @onclick="LoadSelectedSolution" disabled="@_isLoading">
                            Load Selected Solution
                        </button>
                    }
                </div>
            }
        </div>

        <!-- Current Solution Info -->
        @if (AppState.HasSolution)
        {
            <div class="form-section current-solution">
                <h3>‚úÖ Current Solution</h3>
                <div class="solution-info-card">
                    <div class="solution-name">@AppState.CurrentSolution!.Name</div>
                    <div class="solution-path">@AppState.CurrentSolution.Path</div>
                    <div class="solution-stats">
                        <span>üì¶ @AppState.CurrentSolution.ProjectCount projects</span>
                        <span>üß™ @AppState.CurrentSolution.TestProjectCount test projects</span>
                    </div>
                    <button class="btn btn-outline-danger btn-sm" @onclick="ClearSolution">Clear Solution</button>
                </div>
            </div>
        }

        <div class="form-divider"></div>

        <!-- Language Settings -->
        <div class="form-section">
            <h3>üåê Language</h3>
            <div class="form-group">
                <label>@Localization.Get(Strings.Language)</label>
                <select @bind="_selectedLanguage" @bind:after="OnLanguageChanged" class="form-control language-select">
                    @foreach (var lang in Localization.SupportedLanguages)
                    {
                        <option value="@lang.Key">@lang.Value</option>
                    }
                </select>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger mt-3">
            <strong>Error:</strong> @_errorMessage
            <button class="alert-close" @onclick="() => _errorMessage = string.Empty">√ó</button>
        </div>
    }

    @if (!string.IsNullOrEmpty(_successMessage))
    {
        <div class="alert alert-success mt-3">
            <strong>Success:</strong> @_successMessage
            <button class="alert-close" @onclick="() => _successMessage = string.Empty">√ó</button>
        </div>
    }
</div>

