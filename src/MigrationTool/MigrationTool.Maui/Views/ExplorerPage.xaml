<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MigrationTool.Maui.ViewModels"
             x:Class="MigrationTool.Maui.Views.ExplorerPage"
             x:DataType="vm:ExplorerViewModel"
             Title="{Binding Title}">

    <Grid ColumnDefinitions="300,*" Padding="10">

        <!-- Left Panel - Project Tree -->
        <Frame Grid.Column="0" Padding="10" Margin="0,0,5,0">
            <Grid RowDefinitions="Auto,*">
                
                <!-- Header -->
                <HorizontalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,10">
                    <Label Text="Projects" FontSize="16" FontAttributes="Bold" VerticalOptions="Center"/>
                    <Button Text="â†•" Command="{Binding ExpandAllCommand}" WidthRequest="30" HeightRequest="30"/>
                </HorizontalStackLayout>

                <!-- Project List -->
                <CollectionView Grid.Row="1" 
                               ItemsSource="{Binding Projects}"
                               SelectionMode="Single"
                               SelectedItem="{Binding SelectedProject}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="x:Object">
                            <Frame Padding="10" Margin="0,2" BackgroundColor="{StaticResource Gray100}">
                                <VerticalStackLayout>
                                    <Label Text="{Binding Name}" FontAttributes="Bold"/>
                                    <HorizontalStackLayout Spacing="10">
                                        <Label Text="{Binding FileCount, StringFormat='{0} files'}" FontSize="12" TextColor="{StaticResource Gray500}"/>
                                        <Label Text="{Binding ClassCount, StringFormat='{0} classes'}" FontSize="12" TextColor="{StaticResource Gray500}"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                
            </Grid>
        </Frame>

        <!-- Right Panel - File Details -->
        <Frame Grid.Column="1" Padding="10" Margin="5,0,0,0">
            <Grid RowDefinitions="Auto,*">
                
                <!-- Selected Project Header -->
                <VerticalStackLayout Grid.Row="0" Margin="0,0,0,10" IsVisible="{Binding SelectedProject, Converter={StaticResource IsNotNullConverter}}">
                    <Label Text="{Binding SelectedProject.Name}" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="{Binding SelectedProject.Path}" FontSize="12" TextColor="{StaticResource Gray500}"/>
                </VerticalStackLayout>

                <!-- File List -->
                <CollectionView Grid.Row="1" 
                               ItemsSource="{Binding SelectedProject.SourceFiles}"
                               SelectionMode="Single"
                               SelectedItem="{Binding SelectedFile}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="x:Object">
                            <Grid ColumnDefinitions="Auto,*,Auto" Padding="5" BackgroundColor="{StaticResource Gray50}">
                                <Label Grid.Column="0" Text="ðŸ“„" VerticalOptions="Center"/>
                                <VerticalStackLayout Grid.Column="1" Margin="10,0">
                                    <Label Text="{Binding Name}" FontAttributes="Bold"/>
                                    <Label Text="{Binding Namespace}" FontSize="12" TextColor="{StaticResource Gray500}"/>
                                </VerticalStackLayout>
                                <HorizontalStackLayout Grid.Column="2" Spacing="5">
                                    <Label Text="{Binding Classes.Count, StringFormat='{0}C'}" 
                                           FontSize="11" 
                                           BackgroundColor="{StaticResource Primary}"
                                           TextColor="White"
                                           Padding="5,2"/>
                                    <Label Text="{Binding TestCount, StringFormat='{0}T'}" 
                                           FontSize="11" 
                                           BackgroundColor="{StaticResource Secondary}"
                                           TextColor="White"
                                           Padding="5,2"
                                           IsVisible="{Binding IsTestFile}"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Empty State -->
                <VerticalStackLayout Grid.Row="1" 
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Center"
                                    IsVisible="{Binding SelectedProject, Converter={StaticResource IsNullConverter}}">
                    <Label Text="ðŸ“‚" FontSize="48" HorizontalOptions="Center"/>
                    <Label Text="Select a project" FontSize="16" HorizontalOptions="Center"/>
                </VerticalStackLayout>
                
            </Grid>
        </Frame>

    </Grid>

</ContentPage>
