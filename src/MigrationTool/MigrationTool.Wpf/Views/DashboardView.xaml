<UserControl x:Class="MigrationTool.Wpf.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:loc="clr-namespace:MigrationTool.Wpf.Markup"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="{loc:Localize DashboardTitle}" 
                       FontSize="28" FontWeight="Bold" Foreground="#1F2937"/>
            <TextBlock Text="{loc:Localize DashboardDescription}" 
                       FontSize="14" Foreground="#6B7280" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <!-- No Solution State -->
            <StackPanel Visibility="{Binding HasSolution, Converter={StaticResource InverseBoolToVisibility}}"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="ðŸ“‚" FontSize="64" HorizontalAlignment="Center"/>
                <TextBlock Text="{loc:Localize DashboardNoSolution}" 
                           FontSize="18" FontWeight="SemiBold" 
                           HorizontalAlignment="Center" Margin="0,16,0,8"/>
                <TextBlock Text="{loc:Localize DashboardSelectSolution}" 
                           FontSize="14" Foreground="#6B7280" 
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Statistics Grid -->
            <Grid Visibility="{Binding HasSolution, Converter={StaticResource BoolToVisibility}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Projects Card -->
                <Border Grid.Column="0" Grid.Row="0" Background="White" 
                        CornerRadius="8" Margin="0,0,8,8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ“" FontSize="32"/>
                        <TextBlock Text="{Binding ProjectCount}" FontSize="36" FontWeight="Bold" Foreground="#2563EB"/>
                        <TextBlock Text="{loc:Localize TotalProjects}" FontSize="14" Foreground="#6B7280"/>
                    </StackPanel>
                </Border>

                <!-- Test Projects Card -->
                <Border Grid.Column="1" Grid.Row="0" Background="White" 
                        CornerRadius="8" Margin="4,0,4,8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ§ª" FontSize="32"/>
                        <TextBlock Text="{Binding TestProjectCount}" FontSize="36" FontWeight="Bold" Foreground="#059669"/>
                        <TextBlock Text="{loc:Localize TestProjects}" FontSize="14" Foreground="#6B7280"/>
                    </StackPanel>
                </Border>

                <!-- Source Files Card -->
                <Border Grid.Column="2" Grid.Row="0" Background="White" 
                        CornerRadius="8" Margin="8,0,0,8" Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ“„" FontSize="32"/>
                        <TextBlock Text="{Binding FileCount}" FontSize="36" FontWeight="Bold" Foreground="#7C3AED"/>
                        <TextBlock Text="{loc:Localize SourceFiles}" FontSize="14" Foreground="#6B7280"/>
                    </StackPanel>
                </Border>

                <!-- Classes Card -->
                <Border Grid.Column="0" Grid.Row="1" Background="White" 
                        CornerRadius="8" Margin="0,8,8,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="ðŸ”·" FontSize="32"/>
                        <TextBlock Text="{Binding ClassCount}" FontSize="36" FontWeight="Bold" Foreground="#DC2626"/>
                        <TextBlock Text="{loc:Localize TotalClasses}" FontSize="14" Foreground="#6B7280"/>
                    </StackPanel>
                </Border>

                <!-- Tests Card -->
                <Border Grid.Column="1" Grid.Row="1" Background="White" 
                        CornerRadius="8" Margin="4,8,4,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="âœ…" FontSize="32"/>
                        <TextBlock Text="{Binding TestCount}" FontSize="36" FontWeight="Bold" Foreground="#F59E0B"/>
                        <TextBlock Text="{loc:Localize TotalTests}" FontSize="14" Foreground="#6B7280"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
